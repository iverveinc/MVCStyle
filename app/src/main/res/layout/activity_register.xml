<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/scale_35dp"
        android:layout_marginTop="1dp"
        android:background="@color/bottom_view">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/back_icon" />

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="SIGN UP"
            android:textSize="@dimen/txt_20" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlHeader"
        android:scrollbars="none">

        <RelativeLayout
            android:id="@+id/rlSignUpMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.mvcstyle.AppUtils.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/ivProfilePic"
                    android:layout_width="@dimen/scale_80dp"
                    android:layout_height="@dimen/scale_80dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/scale_10dp"
                    android:background="@drawable/signup_profile"
                    android:scaleType="fitXY"
                    app:border_color="@color/bottom_view"
                    app:border_width="@dimen/scale_0.5dp"
                    app:corner_radius="@dimen/scale_40dp"
                    app:round_background="true" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/scale_20dp"
                    android:layout_marginRight="@dimen/scale_20dp"
                    android:layout_marginTop="@dimen/scale_10dp"
                    android:padding="@dimen/scale_1dp">

                    <EditText
                        android:id="@+id/edtFirstname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="First Name"
                        android:textColor="@color/unsel_text"
                        android:textColorHint="@color/edt_hint"
                        android:inputType="textCapSentences"
                        android:paddingRight="@dimen/scale_1dp"
                        android:singleLine="true"
                        android:textCursorDrawable="@drawable/edtcolor"
                        android:textSize="@dimen/txt_12" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.0dp"
                        android:layout_below="@+id/edtFirstname"
                        android:layout_marginTop="@dimen/scale_0.5dp"
                        android:background="@color/bottom_view" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/scale_20dp"
                    android:layout_marginRight="@dimen/scale_20dp"
                    android:layout_marginTop="@dimen/scale_5dp"
                    android:padding="@dimen/scale_1dp">

                    <EditText
                        android:id="@+id/edtLastname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Last Name"
                        android:textColor="@color/unsel_text"
                        android:textColorHint="@color/edt_hint"
                        android:inputType="textCapSentences"
                        android:paddingBottom="@dimen/scale_1dp"
                        android:paddingRight="@dimen/scale_1dp"
                        android:singleLine="true"
                        android:textCursorDrawable="@drawable/edtcolor"
                        android:textSize="@dimen/txt_12" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.0dp"
                        android:layout_below="@+id/edtLastname"
                        android:layout_marginTop="@dimen/scale_0.5dp"
                        android:background="@color/bottom_view" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/scale_20dp"
                    android:layout_marginRight="@dimen/scale_20dp"
                    android:layout_marginTop="@dimen/scale_5dp"
                    android:padding="@dimen/scale_1dp">

                    <EditText
                        android:id="@+id/edtMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Mobile Number"
                        android:maxLength="10"
                        android:textColor="@color/unsel_text"
                        android:textColorHint="@color/edt_hint"
                        android:inputType="phone"
                        android:paddingBottom="@dimen/scale_1dp"
                        android:paddingRight="@dimen/scale_1dp"
                        android:singleLine="true"
                        android:textCursorDrawable="@drawable/edtcolor"
                        android:textSize="@dimen/txt_12" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.0dp"
                        android:layout_below="@+id/edtMobile"
                        android:layout_marginTop="@dimen/scale_0.5dp"
                        android:background="@color/bottom_view" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/scale_20dp"
                    android:layout_marginRight="@dimen/scale_20dp"
                    android:layout_marginTop="@dimen/scale_5dp"
                    android:padding="@dimen/scale_1dp">

                    <EditText
                        android:id="@+id/edtUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="User Name"
                        android:textColor="@color/unsel_text"
                        android:textColorHint="@color/edt_hint"
                        android:inputType="text"
                        android:paddingBottom="@dimen/scale_1dp"
                        android:paddingRight="@dimen/scale_1dp"
                        android:singleLine="true"
                        android:textCursorDrawable="@drawable/edtcolor"
                        android:textSize="@dimen/txt_12" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.0dp"
                        android:layout_below="@+id/edtUsername"
                        android:layout_marginTop="@dimen/scale_0.5dp"
                        android:background="@color/bottom_view" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/scale_20dp"
                    android:layout_marginRight="@dimen/scale_20dp"
                    android:layout_marginTop="@dimen/scale_5dp"
                    android:padding="@dimen/scale_1dp">

                    <EditText
                        android:id="@+id/edtEmailSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textColor="@color/unsel_text"
                        android:textColorHint="@color/edt_hint"
                        android:hint="Email Id"
                        android:inputType="text"
                        android:paddingBottom="@dimen/scale_1dp"
                        android:paddingRight="@dimen/scale_1dp"
                        android:singleLine="true"
                        android:textCursorDrawable="@drawable/edtcolor"
                        android:textSize="@dimen/txt_12" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.0dp"
                        android:layout_below="@+id/edtEmailSignUp"
                        android:layout_marginTop="@dimen/scale_0.5dp"
                        android:background="@color/bottom_view" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/scale_20dp"
                    android:layout_marginRight="@dimen/scale_20dp"
                    android:layout_marginTop="@dimen/scale_5dp"
                    android:padding="@dimen/scale_1dp">

                    <EditText
                        android:id="@+id/edtPassSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Password"
                        android:textColor="@color/unsel_text"
                        android:textColorHint="@color/edt_hint"
                        android:inputType="textPassword"
                        android:paddingBottom="@dimen/scale_1dp"
                        android:paddingRight="@dimen/scale_1dp"
                        android:singleLine="true"
                        android:textCursorDrawable="@drawable/edtcolor"
                        android:textSize="@dimen/txt_12" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.0dp"
                        android:layout_below="@+id/edtPassSignUp"
                        android:layout_marginTop="@dimen/scale_0.5dp"
                        android:background="@color/bottom_view" />
                </RelativeLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/scale_20dp"
                    android:layout_marginRight="@dimen/scale_20dp"
                    android:layout_marginTop="@dimen/scale_8dp"
                    android:padding="@dimen/scale_1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtGender"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:text="Gender"
                        android:textColor="@color/edt_hint"
                        android:textSize="@dimen/txt_12" />

                    <RadioGroup
                        android:id="@+id/radioSex"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/scale_50dp"
                        android:layout_marginRight="@dimen/scale_10dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioMale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/scale_10dp"
                            android:button="@drawable/rb_button"
                            android:checked="true"
                            android:paddingLeft="@dimen/scale_10dp"
                            android:text="Male" />

                        <RadioButton
                            android:id="@+id/radioFemale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/scale_10dp"
                            android:button="@drawable/rb_button"
                            android:paddingLeft="@dimen/scale_10dp"
                            android:text="Female" />
                    </RadioGroup>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.0dp"
                    android:layout_marginLeft="@dimen/scale_20dp"
                    android:layout_marginRight="@dimen/scale_20dp"
                    android:layout_below="@+id/edtPass"
                    android:layout_marginTop="@dimen/scale_0.5dp"
                    android:background="@color/bottom_view" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/scale_5dp"
                    android:layout_marginLeft="@dimen/scale_20dp"
                    android:layout_marginRight="@dimen/scale_20dp"
                    android:orientation="vertical"
                    android:padding="@dimen/scale_1dp">

                    <EditText
                        android:id="@+id/edtAddress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="start"
                        android:hint="Address"
                        android:inputType="textMultiLine|textCapSentences"
                        android:lines="3"
                        android:textColor="@color/unsel_text"
                        android:textColorHint="@color/edt_hint"
                        android:maxLines="3"
                        android:scrollbars="vertical"
                        android:textCursorDrawable="@drawable/edtcolor"
                        android:textSize="@dimen/txt_12" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.0dp"
                        android:layout_below="@+id/edtPass"
                        android:layout_marginTop="@dimen/scale_0.5dp"
                        android:background="@color/bottom_view" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvForgotPass"
                    android:layout_marginLeft="@dimen/scale_20dp"
                    android:layout_marginRight="@dimen/scale_20dp"
                    android:layout_marginTop="@dimen/scale_5dp"
                    android:padding="@dimen/scale_1dp">

                    <Button
                        android:id="@+id/btnSubmit"
                        android:layout_width="@dimen/scale_225dp"
                        android:layout_height="@dimen/scale_40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/scale_5dp"
                        android:background="@drawable/roundedbutton"
                        android:text="Submit"
                        android:textColor="@color/bottom_view"
                        android:textSize="@dimen/txt_12" />

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>